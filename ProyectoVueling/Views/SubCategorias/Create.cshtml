@model ProyectoVueling.Models.SubCategoria

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SubCategoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubCategoria1" class="control-label"></label>
                <input asp-for="SubCategoria1" class="form-control" />
                <span asp-validation-for="SubCategoria1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control" asp-items="ViewBag.Categoria"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComentarioHtml" class="control-label"></label>
                <textarea asp-for="ComentarioHtml" id="idComentarioHtml" class="form-control" rows="8" cols="140"></textarea>
                <span asp-validation-for="ComentarioHtml" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenMiniatura" class="control-label"></label>
                <input name="ImagenMiniatura" type="file" class="form-control" />
                <span asp-validation-for="ImagenMiniatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenGrande" class="control-label"></label>
                <input name="ImagenGrande" type="file" class="form-control" />
                <span asp-validation-for="ImagenGrande" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script type="text/javascript">
        tinymce.init({
            selector: "#idComentarioHtml",
            plugins: "code"
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
