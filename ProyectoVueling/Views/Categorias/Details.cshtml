@model ProyectoVueling.Models.Categoria

@{
    ViewData["Title"] = "Detalles";
}

<h2>Details</h2>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Categoria1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categoria1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ComentarioHtml)
        </dt>
        <dd>
            @Html.Raw(Model.ComentarioHtml)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagenMiniatura)
        </dt>
        <dd>
            @{
                if (Model.ImagenMiniatura != null)
                {
                    var bytes = Convert.ToBase64String(Model.ImagenMiniatura);
                    var myString = "data:image/png;base64," + bytes;

                    <img src="@myString" width="100" height="100" />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagenGrande)
        </dt>
        <dd>
            @{
                if (Model.ImagenGrande != null)
                {
                    var bytes = Convert.ToBase64String(Model.ImagenGrande);
                    var myString = "data:image/png;base64," + bytes;

                    <img src="@myString" width="100" height="100" />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd>
            <canvas id="myCanvas" width="30" height="30" style="border:1px solid #000000; background-color:@Model.Color;"></canvas>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
