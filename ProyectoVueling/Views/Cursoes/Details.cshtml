@model ProyectoVueling.Models.Curso

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Curso1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Curso1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model=>model.ComentarioHtml)
        </dt>
        <dd>
            @Html.Raw(Model.ComentarioHtml)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagenMiniatura)
        </dt>
        <dd>
            @{
                if (Model.ImagenMiniatura != null)
                {
                    var bytes = Convert.ToBase64String(Model.ImagenMiniatura);
                    var myString = "data:image/png;base64," + bytes;

                    <img src="@myString" width="50" height="50" />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImagenGrande)
        </dt>
        <dd>
            @{
                if (Model.ImagenGrande != null)
                {
                    var bytes = Convert.ToBase64String(Model.ImagenGrande);
                    var myString = "data:image/png;base64," + bytes;

                    <img src="@myString" width="50" height="50" />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubCategoriaNavigation.Categoria)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubCategoriaNavigation.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

